    },
    "message5_text": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 3
      }
    },
    "message6_text": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 3
      }
    },
    "message7_text": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 3
      }
    },
    "message8_text": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 3
      }
    },
    "message9_text": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 3
      }
    },
    "message10_text": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 3
      }
    },
    "backgroundColor": {
      "ui:widget": "color"
    },
    "textColor": {
      "ui:widget": "color"
    },
    "ui:order": [
      "message1_text",
      "message1_icon",
      "message1_iconPosition",
      "message2_text",
      "message2_icon",
      "message2_iconPosition",
      "message3_text",
      "message3_icon",
      "message3_iconPosition",
      "message4_text",
      "message4_icon",
      "message4_iconPosition",
      "message5_text",
