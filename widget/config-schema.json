      "message8_iconPosition",
      "message9_text",
      "message9_icon",
      "message9_iconPosition",
      "message10_text",
      "message10_icon",
      "message10_iconPosition",
      "*"
    ]
  },
  "groups": [
    {
      "title": "Mensajes",
      "fields": [
        "message1_text",
        "message1_icon",
